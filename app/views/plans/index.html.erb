<h1>Listing plans</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Disbursement date</th>
    <th>Expiration date</th>
    <th>Credit</th>
    <th>Ratio</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @plans.each do |plan| %>
  <tr>
    <td><%= plan.name %></td>
    <td><%= plan.disbursement_date %></td>
    <td><%= plan.expiration_date %></td>
    <td><%= plan.credit %></td>
    <td><%= plan.ratio %></td>
    <td><%= link_to 'Show', plan %></td>
    <td><%= link_to 'Edit', edit_plan_path(plan) %></td>
    <td><%= link_to 'Destroy', plan, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

